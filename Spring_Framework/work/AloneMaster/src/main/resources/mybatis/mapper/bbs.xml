<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bbs">
    
    
    <resultMap id="map1" type="mybatis.vo.BbsVO">
        <id property="b_idx" column="b_idx"/>
        
        <collection property="c_list" ofType="mybatis.vo.CommVO"
                    select="comm.list" column="b_idx"/>
    </resultMap>

    <select id="list" parameterType="Map" resultMap="map1">
        select * from(
        select @RN:=@RN+1 as rnum, a.* from
        (SELECT * from bbs_t where status = 0 and bname=#{bname} order by b_idx desc) a,
        (SELECT @RN :=0) b) c
        where c.rnum between #{begin} and #{end}
    </select>

    <select id="getTotal" resultType="int" parameterType="String">
        select count(*) from bbs_t where bname=#{bname} and status = 0
    </select>
</mapper>