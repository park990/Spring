<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sist.ex0917_bbs.mapper.CommMapper">
    <select id="commList" resultType="com.sist.ex0917_bbs.vo.CommVO" parameterType="String">
        select * from comment_t where b_idx=#{no}
    </select>

    <insert id="addComm" parameterType="com.sist.ex0917_bbs.vo.CommVO">
        insert into comment_t(writer,content,pwd,ip,write_date,b_idx)
        values(#{writer},#{content},#{pwd},#{ip},#{write_date},#{b_idx})
    </insert>


</mapper>